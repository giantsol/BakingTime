<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragment_recipe_step_detail_short_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/stepDetailShortDescTextStyle"/>
        <RelativeLayout
            android:id="@+id/fragment_recipe_step_detail_exoplayerview_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/video_height"
            app:layout_constraintTop_toBottomOf="@+id/fragment_recipe_step_detail_short_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/fragment_recipe_step_detail_exoplayerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fastforward_increment="5000"
                app:rewind_increment="5000"/>
            <ImageView
                android:id="@+id/fragment_recipe_step_detail_broken_video_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_broken_image_black_24dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/fragment_recipe_step_detail_broken_video_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_broken_video"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/fragment_recipe_step_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_step_detail_exoplayerview_container"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            style="@style/stepDetailLongDescTextStyle"/>
        <Button
            android:id="@+id/fragment_recipe_step_detail_previous_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_step_detail_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:text="@string/text_previous_button"
            style="@style/prevNextButtonStyle"/>
        <Button
            android:id="@+id/fragment_recipe_step_detail_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_step_detail_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:text="@string/text_next_button"
            style="@style/prevNextButtonStyle"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
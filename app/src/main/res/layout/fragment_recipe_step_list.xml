<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_recipe_step_list_slider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoOverlay="false"
    sothree:umanoPanelHeight="@dimen/sliding_panel_height"
    sothree:umanoShadowHeight="@dimen/shadow_height">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_recipe_step_list_steps_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ingredients_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sothree:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="@string/text_ingredients"
            style="@style/h2TextStyle" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_recipe_step_list_ingredients_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sothree:layout_constraintTop_toBottomOf="@id/ingredients_header"/>
    </android.support.constraint.ConstraintLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>

